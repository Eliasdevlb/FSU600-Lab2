@inherits LayoutComponentBase
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TAXI.SE</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-800 text-gray-200">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <NavMenu />

        <!-- Main content -->
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <div class="flex justify-between items-center p-6 bg-gray-500">
                <div class="flex items-center">
                    <div class="ml-4 relative w-full md:w-auto">
                        <input type="search" placeholder="Search" class="w-full md:w-auto bg-gray-800 text-gray-300 rounded-full pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <i class="fas fa-search absolute left-0 top-0 ml-3 mt-3 text-gray-400"></i>
                    </div>
                </div>
                <div class="flex items-center">
                   <div class="flex items-center">
                        <img src="/images/favicon-32x32.png" alt="Fleet Manager profile image" class="rounded-full mr-3">
                        <span class="hidden md:inline text-gray-300">Administrator</span>
                  </div>
                </div>
            </div>
            <div>@Body</div>
        </div>
    </div>
</body>
</html>
