{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "build",
                "${workspaceFolder}/FSU-600-LAB2.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/FSU-600-LAB2.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/FSU-600-LAB2.csproj"
            ],
            "isBackground": true,
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "silent"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "configurations": [
        {
            "name": "Blazor Watch",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}\\FSU-600-LAB2.csproj"
        }
    ]
}